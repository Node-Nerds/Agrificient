<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>

    <h1>Inbox</h1>

    <% inboxes.forEach(function (inbox) {%>

    <div>
        <a href="">User</a>: <%=inbox.fname%> Warehouse_name: <%=inbox.warehouse_name%> Start_Date:
        <%=inbox.start_date%> End_Date: <%=inbox.end_date%>

        <% if(inbox.current_status == 'pending'){%>
        <button id=<%=inbox.id%> class="approve">Approve</button>
        <span class=<%=inbox.id%> style="color: green;" hidden="true"> Approved </span>
        <%}else if(inbox.current_status == 'approved'){ %>
        <span style=" color: green;"> Approved </span>
        <% }else{ %>
        <span style="color: green;"> Paid </span>
        <% } %>
    </div>

    <%})%>

    <!-- Jquery Script -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <script>
        $(".approve").click(function () {

            var button = this;

            var pid = button.id;

            var data = {};
            data.pid = pid;

            $.post("/warehouse/inbox", data, function (data, status) {

                console.log("hq");
                $("#" + pid).attr("hidden", "true");
                $("." + pid).removeAttr("hidden");
                console.log("kk");

            })
        })
    </script>
</body>

</html>