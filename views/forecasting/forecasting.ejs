<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forecasting</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="/bootstrap.min.css">
</head>

<body class="text-center">

    <form id="forecastForm" class="form-add" action="/forecasting" method="post">
        <img src="/logo.svg" alt="" width="150" height="150">
        <h3 class="text-primary mb-3">Forecasting</h3>
        <div class="form-group text-left">
            <label for="year">Year</label>
            <input type="text" id="year" name="year" class="form-control" required autofocus>
        </div>
        <div class="form-group text-left">
            <label for="district">District</label>
            <input type="tel" id="district" name="district" class="form-control" required>
        </div>
        <div class="form-group text-left">
            <label for="crop">Crop</label>
            <input type="text" id="crop" name="crop" class="form-control" required>
        </div>
        <div class="form-group text-left">
            <label for="season">Season</label>
            <input type="text" id="season" name="season" class="form-control" required>
        </div>

        <a class="btn btn-lg btn-success btn-block mt-1" id="submit" type="button" onclick="submit()"> Forecasting </a>

        <div id="myOutput"></div>

    </form>

    <!-- Jquery Script -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <script>
        function submit() {

            var form = $("#forecastForm");
            var mainContainer = document.getElementById("myOutput");

            $.post("/forecasting", form.serialize(), function (output, status) {
                mainContainer.innerHTML = output[0];
                console.log(output);
            })
        }
    </script>

</body>


</html>